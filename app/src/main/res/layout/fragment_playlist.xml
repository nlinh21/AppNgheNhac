<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/textviewtitleplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewtitleplaylist"
        android:layout_marginTop="9dp">
    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewplaylist"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/bon"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/playlist"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/textviewviewmoreplaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:text="Xem thêm tại playlist"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </LinearLayout>



</RelativeLayout>
